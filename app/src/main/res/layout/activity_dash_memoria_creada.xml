<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashMemoriaCreada">

    <View
        android:id="@+id/frame_nav"
        android:layout_width="393dp"
        android:layout_height="71dp"
        android:background="@color/azul_claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo_img_2"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_nav"
        app:layout_constraintEnd_toEndOf="@+id/frame_nav"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/frame_nav"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_img_2" />

    <ImageView
            android:id="@+id/icon_lupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.759"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/icon_lupa" />

        <ImageView
            android:id="@+id/icon_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/icon_cuenta" />

    <TextView
        android:id="@+id/titulo_album"
        android:layout_width="183dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="mi 5 cumple"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_nav"
        app:layout_constraintVertical_bias="0.022" />

    <ImageView
            android:id="@+id/icon_crear_memoria"
            android:layout_width="90dp"
            android:layout_height="75dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.939"
            app:srcCompat="@drawable/icon_crear_album" />

    <ImageView
        android:id="@+id/icon_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titulo_album"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_nav"
        app:layout_constraintVertical_bias="0.032"
        app:srcCompat="@drawable/icon_volver" />

    <View
        android:id="@+id/card_m"
        android:layout_width="310dp"
        android:layout_height="227dp"

        android:background="@drawable/card_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_album"
        app:layout_constraintVertical_bias="0.079" />

    <ImageView
        android:id="@+id/img_memoria"
        android:layout_width="310dp"
        android:layout_height="133dp"
        android:background="@drawable/img_border"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/imgalbum"
        app:layout_constraintBottom_toBottomOf="@+id/card_m"
        app:layout_constraintEnd_toEndOf="@+id/card_m"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/card_m"
        app:layout_constraintTop_toTopOf="@+id/card_m"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ubi_memoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ubicacion_memoria"
        app:layout_constraintBottom_toBottomOf="@+id/card_m"
        app:layout_constraintEnd_toEndOf="@+id/card_m"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toStartOf="@+id/card_m"
        app:layout_constraintTop_toBottomOf="@+id/img_memoria"
        app:layout_constraintVertical_bias="0.693" />

    <TextView
        android:id="@+id/fecha_memoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/05/2010"
        app:layout_constraintBottom_toBottomOf="@+id/card_m"
        app:layout_constraintEnd_toEndOf="@+id/card_m"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="@+id/card_m"
        app:layout_constraintTop_toBottomOf="@+id/img_memoria"
        app:layout_constraintVertical_bias="0.693" />

    <TextView
        android:id="@+id/titulo_memoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desayuno sorpresa"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/card_m"
        app:layout_constraintEnd_toEndOf="@+id/card_m"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="@+id/card_m"
        app:layout_constraintTop_toBottomOf="@+id/img_memoria"
        app:layout_constraintVertical_bias="0.166" />

    <ImageView
        android:id="@+id/icon_ubi"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_m"
        app:layout_constraintEnd_toStartOf="@+id/ubi_memoria"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/card_m"
        app:layout_constraintTop_toBottomOf="@+id/img_memoria"
        app:layout_constraintVertical_bias="0.712"
        app:srcCompat="@drawable/icon_ubi" />

    <ImageView
        android:id="@+id/icon_puntos_m"
        android:layout_width="30dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_m"
        app:layout_constraintEnd_toEndOf="@+id/card_m"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="@+id/card_m"
        app:layout_constraintTop_toBottomOf="@+id/img_memoria"
        app:layout_constraintVertical_bias="0.172"
        app:srcCompat="@drawable/icon_puntos" />


</androidx.constraintlayout.widget.ConstraintLayout>