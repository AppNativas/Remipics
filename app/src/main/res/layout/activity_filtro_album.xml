<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiltroAlbum">

        <View
            android:id="@+id/frame_nav"
            android:layout_width="392dp"
            android:layout_height="71dp"
            android:background="@color/azul_claro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/logo_img_2"
            android:layout_width="232dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01"
            app:srcCompat="@drawable/logo_img_2" />

        <ImageView
            android:id="@+id/icon_filtro_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.759"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/icon_filtro_f_s" />

        <ImageView
            android:id="@+id/icon_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/icon_cuenta" />

        <TextView
            android:id="@+id/titulo_album"
            android:layout_width="183dp"
            android:layout_height="39dp"
            android:text="Mis Ã¡lbumes"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132" />


        <View
            android:id="@+id/frame_albumes"
            android:layout_width="342dp"
            android:layout_height="192dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.279" />

        <View
            android:id="@+id/frame_album"
            android:layout_width="143dp"
            android:layout_height="190dp"

            app:layout_constraintBottom_toBottomOf="@+id/frame_albumes"
            app:layout_constraintEnd_toEndOf="@+id/frame_albumes"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintStart_toStartOf="@+id/frame_albumes"
            app:layout_constraintTop_toTopOf="@+id/frame_albumes"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_portada_album"
            android:layout_width="143dp"
            android:layout_height="127dp"
            android:background="@drawable/img_border_a"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/imgalbum"
            app:layout_constraintBottom_toBottomOf="@+id/frame_album"
            app:layout_constraintEnd_toEndOf="@+id/frame_album"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/frame_album"
            app:layout_constraintTop_toTopOf="@+id/frame_album"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nom_album"
            android:layout_width="101dp"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:text="mi 5 cumple"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/frame_album"
            app:layout_constraintEnd_toEndOf="@+id/frame_album"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="@+id/frame_album"
            app:layout_constraintTop_toTopOf="@+id/frame_album"
            app:layout_constraintVertical_bias="0.784" />

        <TextView
            android:id="@+id/cant_memoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="1"
            android:textSize="13dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/frame_album"
            app:layout_constraintEnd_toEndOf="@+id/frame_album"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="@+id/frame_album"
            app:layout_constraintTop_toTopOf="@+id/frame_album"
            app:layout_constraintVertical_bias="0.909" />

        <ImageView
            android:id="@+id/icon_selec_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/frame_album"
            app:layout_constraintEnd_toEndOf="@+id/frame_album"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/frame_album"
            app:layout_constraintTop_toTopOf="@+id/frame_album"
            app:layout_constraintVertical_bias="0.881"
            app:srcCompat="@drawable/icon_puntos" />
        <View
            android:id="@+id/tapar"
            android:layout_width="396dp"
            android:layout_height="743dp"
            android:background="@color/tapar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.147" />

        <View
            android:id="@+id/keyboard"
            android:layout_width="394dp"
            android:layout_height="263dp"
            android:background="#EB737373"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


        <View
            android:id="@+id/modal_selecciona_fecha"
            android:layout_width="337dp"
            android:layout_height="348dp"
            android:background="@drawable/modal"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/keyboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_nav" />



</androidx.constraintlayout.widget.ConstraintLayout>