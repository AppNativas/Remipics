<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearMemoria2">

        <View
            android:id="@+id/frame_nav"
            android:layout_width="393dp"
            android:layout_height="71dp"
            android:background="@color/azul_claro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/logo_img_2"
            android:layout_width="232dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01"
            app:srcCompat="@drawable/logo_img_2" />

        <ImageView
            android:id="@+id/icon_lupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.759"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/icon_lupa" />

        <ImageView
            android:id="@+id/icon_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/icon_cuenta" />

        <TextView
            android:id="@+id/titulo_album"
            android:layout_width="183dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:text="mi 5 cumple"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.115" />

        <ImageView
            android:id="@+id/icon_crear_memoria"
            android:layout_width="90dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.939"
            app:srcCompat="@drawable/icon_crear_album" />

        <ImageView
            android:id="@+id/icon_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/titulo_album"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.121"
            app:srcCompat="@drawable/icon_volver" />


        <View
            android:id="@+id/tapar"
            android:layout_width="392dp"
            android:layout_height="736dp"
            android:background="#BFE9E9E9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.147" />



        <View
            android:id="@+id/modal_crear_memoria"
            android:layout_width="349dp"
            android:layout_height="394dp"
            android:background="@drawable/modal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.316" />


        <TextView
            android:id="@+id/txt_crear_memoria_2"
            android:layout_width="264dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="¡Agrega una imagen, ubicacion y fecha!"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.064" />


        <ImageView
            android:id="@+id/icon_cerrar"
            android:layout_width="33dp"
            android:layout_height="27dp"
            android:layout_marginBottom="276dp"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.950"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.15"
            app:srcCompat="@drawable/icon_cerrar" />

        <ImageView
            android:id="@+id/icon_img_m"
            android:layout_width="150dp"
            android:layout_height="112dp"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.339"
            app:srcCompat="@drawable/icon_img_m" />

        <TextView
            android:id="@+id/txt_img_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imagen*"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.544" />


        <ImageView
            android:id="@+id/icon_ubi_m"
            android:layout_width="28dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.246"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.63"
            app:srcCompat="@drawable/icon_ubi_m" />

        <ImageView
            android:id="@+id/icon_fecha_m"
            android:layout_width="32dp"
            android:layout_height="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.236"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.796"
            app:srcCompat="@drawable/icon_fecha_m" />

        <Button
            android:id="@+id/btn_aceptar_cm"
            android:layout_width="237dp"
            android:layout_height="46dp"
            android:backgroundTint="@color/btn_secundario"
            android:gravity="center"
            android:text="Aceptar"
            android:textColor="@color/txt_secundario"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
            app:layout_constraintVertical_bias="0.951" />

        <TextView
            android:id="@+id/enlace_ubi_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openLocationPicker"
            android:text="Agregar ubicación*"
            android:textColor="@color/secundario"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toBottomOf="@+id/titulo_album"
            app:layout_constraintVertical_bias="0.683" />

        <TextView
            android:id="@+id/enlace_fecha_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar fecha*"
            android:textColor="@color/secundario"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
            app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
            app:layout_constraintTop_toBottomOf="@+id/titulo_album"
            app:layout_constraintVertical_bias="0.793" />


</androidx.constraintlayout.widget.ConstraintLayout>