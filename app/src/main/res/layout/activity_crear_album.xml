<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAlbum">


    <View
        android:id="@+id/frame_nav"
        android:layout_width="393dp"
        android:layout_height="64dp"
        android:background="@color/azul_claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo_img_2"
        android:layout_width="232dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/logo_img_2" />

    <ImageView
        android:id="@+id/icon_filtro_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.759"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/icon_filtro_f" />

    <ImageView
        android:id="@+id/icon_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/icon_cuenta" />

    <TextView
        android:id="@+id/titulo_album"
        android:layout_width="183dp"
        android:layout_height="39dp"
        android:text="Mis álbumes"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />



    <ImageView
        android:id="@+id/icon_crear_album"
        android:layout_width="90dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"
        app:srcCompat="@drawable/icon_crear_album" />


    <View
        android:id="@+id/tapar"
        android:layout_width="393dp"
        android:layout_height="743dp"
        android:background="@color/tapar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.147" />


    <View
        android:id="@+id/modal_crear_memoria"
        android:layout_width="339dp"
        android:layout_height="169dp"
        android:background="@drawable/modal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/txt_crear_memoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear un álbum"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/btn_cancelar_ca"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/btn_secundario"
        android:gravity="center"
        android:text="Cancelar"
        android:textColor="@color/txt_secundario"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.87" />

    <Button
        android:id="@+id/btn_aceptar_ca"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/btn_primario"
        android:gravity="center"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.799"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.87" />

    <EditText
        android:id="@+id/label_nom_album"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:text="Nombre"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.47" />

</androidx.constraintlayout.widget.ConstraintLayout>