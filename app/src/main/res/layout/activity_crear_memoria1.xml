<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearMemoria1">

    <View
        android:id="@+id/frame_nav"
        android:layout_width="393dp"
        android:layout_height="71dp"
        android:background="@color/azul_claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo_img_2"
        android:layout_width="232dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/logo_img_2" />

    <ImageView
        android:id="@+id/icon_lupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.759"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/icon_lupa" />

    <ImageView
        android:id="@+id/icon_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/icon_cuenta" />

    <TextView
        android:id="@+id/titulo_album"
        android:layout_width="183dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="mi 5 cumple"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <ImageView
        android:id="@+id/icon_crear_memoria"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"
        app:srcCompat="@drawable/icon_crear_album" />

    <ImageView
        android:id="@+id/icon_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titulo_album"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121"
        app:srcCompat="@drawable/icon_volver" />


    <View
        android:id="@+id/tapar"
        android:layout_width="392dp"
        android:layout_height="736dp"
        android:background="#BFE9E9E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="0.99"
        app:layout_constraintVertical_bias="0.147" />

    <View
        android:id="@+id/keyboard"
        android:layout_width="394dp"
        android:layout_height="263dp"
        android:background="#EB737373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <View
        android:id="@+id/modal_crear_memoria"
        android:layout_width="353dp"
        android:layout_height="350dp"
        android:background="@drawable/modal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <TextView
        android:id="@+id/txt_crear_memoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Crea una memoria!"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.077" />


    <EditText
        android:id="@+id/label_nom_m"
        android:layout_width="242dp"
        android:layout_height="36dp"
        android:background="@drawable/label"

        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.337" />

    <EditText
        android:id="@+id/label_desc"
        android:layout_width="242dp"
        android:layout_height="125dp"
        android:background="@drawable/label"

        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.791" />

    <TextView
        android:id="@+id/txt_titulo_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.456" />

    <ImageView
        android:id="@+id/icon_cerrar"
        android:layout_width="33dp"
        android:layout_height="27dp"
        android:layout_marginBottom="276dp"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.950"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/icon_cerrar" />

    <ImageView
        android:id="@+id/icon_avan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/icon_avan" />

    <ImageView
        android:id="@+id/icon_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/modal_crear_memoria"
        app:layout_constraintEnd_toEndOf="@+id/modal_crear_memoria"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="@+id/modal_crear_memoria"
        app:layout_constraintTop_toTopOf="@+id/modal_crear_memoria"
        app:layout_constraintVertical_bias="0.463"
        app:srcCompat="@drawable/icon_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>