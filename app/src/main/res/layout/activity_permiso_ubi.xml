<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermisoUbi">


    <View
        android:id="@+id/frame_nav"
        android:layout_width="391dp"
        android:layout_height="67dp"
        android:background="@color/azul_claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo_img_2"
        android:layout_width="232dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/logo_img_2" />

    <ImageView
        android:id="@+id/icon_filtro_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.759"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/icon_filtro_f" />

    <ImageView
        android:id="@+id/icon_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/icon_cuenta" />

    <TextView
        android:id="@+id/txt_mis_album"
        android:layout_width="183dp"
        android:layout_height="39dp"
        android:text="Mis álbumes"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />



    <ImageView
        android:id="@+id/icon_crear_album"
        android:layout_width="90dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"
        app:srcCompat="@drawable/icon_crear_album" />

    <View
        android:id="@+id/tapar"
        android:layout_width="391dp"
        android:layout_height="808dp"
        android:background="#DFFAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/modal_permiso_ubi"
        android:layout_width="335dp"
        android:layout_height="210dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_permiso_img"
        android:layout_width="284dp"
        android:layout_height="99dp"

        android:gravity="center"
        android:text="¿Quieres permitir que Remipics acceda a la ubicacion de este dispositivo?"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modal_permiso_ubi"
        app:layout_constraintEnd_toEndOf="@+id/modal_permiso_ubi"
        app:layout_constraintStart_toStartOf="@+id/modal_permiso_ubi"
        app:layout_constraintTop_toTopOf="@+id/modal_permiso_ubi"
        app:layout_constraintVertical_bias="0.115" />

    <View
        android:id="@+id/linea_1"
        android:layout_width="335dp"
        android:layout_height="2dp"
        android:background="@color/gris"
        app:layout_constraintBottom_toBottomOf="@+id/modal_permiso_ubi"
        app:layout_constraintEnd_toEndOf="@+id/modal_permiso_ubi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/modal_permiso_ubi"
        app:layout_constraintTop_toTopOf="@+id/modal_permiso_ubi"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/opcion_permitir"
        android:layout_width="108dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="PERMITIR"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modal_permiso_ubi"
        app:layout_constraintEnd_toEndOf="@+id/modal_permiso_ubi"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/modal_permiso_ubi"
        app:layout_constraintTop_toTopOf="@+id/modal_permiso_ubi"
        app:layout_constraintVertical_bias="0.685" />

    <View
        android:id="@+id/linea_2"
        android:layout_width="335dp"
        android:layout_height="2dp"
        android:background="@color/gris"
        app:layout_constraintBottom_toBottomOf="@+id/modal_permiso_ubi"
        app:layout_constraintEnd_toEndOf="@+id/modal_permiso_ubi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/modal_permiso_ubi"
        app:layout_constraintTop_toTopOf="@+id/modal_permiso_ubi"
        app:layout_constraintVertical_bias="0.788" />

    <TextView
        android:id="@+id/opcion_no_permitir"
        android:layout_width="108dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="NO PERMITIR"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modal_permiso_ubi"
        app:layout_constraintEnd_toEndOf="@+id/modal_permiso_ubi"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/modal_permiso_ubi"
        app:layout_constraintTop_toTopOf="@+id/modal_permiso_ubi"
        app:layout_constraintVertical_bias="0.931" />










</androidx.constraintlayout.widget.ConstraintLayout>